            text: "Help - How To - Tips"
            color: (0, 0, 0, 1)


<IndexSelection>:
    topics_slider: topics_slider
    indices_slider: indices_slider
    topics_slider_box: topics_slider_box
    indices_slider_stack: indices_slider_stack
    index_desc_slider: index_desc_slider

    toggle_index_desc_container: toggle_index_desc_container
    toggle_index_desc_icon: toggle_index_desc_icon
    toggle_index_desc_label: toggle_index_desc_label

    add_index_container: add_index_container
    add_index_icon: add_index_icon
    add_index_label: add_index_label

    my_indicators_search_sm: my_indicators_search_sm
    my_indicators_slider: my_indicators_slider
    my_indicators_container: my_indicators_container
    search_results_slider: search_results_slider
    search_results_container: search_results_container

    search_area: search_area

    name: 'IndexSelectionScreen'
    BoxLayout:
        size_hint: (None, None)
        size: root.size
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: 305

            ScrollView:
                id: topics_slider
                do_scroll_x: False
                bar_width: 5
                bar_inactive_color: (0, 0, 0, 1)
                bar_color: (0.34, 0.76, 1, 1)

                BoxLayout:
                    id: topics_slider_box
                    size_hint_y: None
                    orientation: "vertical"
                    size_hint_x: None
                    width: 300
                    padding: (1, 1, 1, 1)
                    spacing: 1
                    canvas:
                        Color:
                            rgba: (1, 1, 1, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

        BoxLayout:

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                # 850 = 8(paddings) + 305(topics_slider) + 157(min width of my_indicators) + 380(min index slide)
                width: 0 if len(indices_slider_stack.children)==0 else 388+(abs(((root.width-850)//380)*380)+(((root.width-850)//380)*380))/2

                ScrollView:
                    id: indices_slider
                    do_scroll_x: False
                    bar_width: 5
                    bar_inactive_color: (0, 0, 0, 1)
                    bar_color: (0.34, 0.76, 1, 1)
                    bar_margin: 1
                    bar_pos_y: "left"
                    IndexStackLayout:
                        id: indices_slider_stack

                XLine:

                BoxLayout:
                    id: index_desc_box
                    canvas.before:
                        Color:
                            rgba: (0.18, 0.18, 0.18, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    orientation: "horizontal"
                    size_hint_y: None
                    height: 80

                    BoxLayout:
                        size_hint: (None, 1)
                        width: 15

                    AnchorLayout:
                        id: toggle_index_desc_container
                        size_hint: (None, 1)
                        anchor_x: "center"
                        anchor_y: "top"
                        width: 45

                        Button:
                            id: toggle_index_desc_icon
                            size_hint: (None, None)
                            width: 45
                            height: 17
                            background_down: './Sources/index_desc_up_down.png' if index_desc_box.height == 80 else './Sources/index_desc_down_down.png'
                            background_normal: './Sources/index_desc_up_normal.png' if index_desc_box.height == 80 else './Sources/index_desc_down_normal.png'
                            on_press:
                                if index_desc_box.height == 80: index_desc_box.height = 200
                                else: index_desc_box.height = 80

                        Label:
                            id: toggle_index_desc_label
                            size_hint: (1, None)
                            height: 50
                            text: "OPEN" if index_desc_box.height == 80 else "CLOSE"
                            color: (1, 1, 1, 1)
                            font_size: 12

                    ScrollView:
                        id: index_desc_slider
                        do_scroll_x: False
                        bar_width: 5
                        bar_inactive_color: (1, 1, 1, 1)
                        bar_color: (0.34, 0.76, 1, 1)
                        bar_margin: 1
