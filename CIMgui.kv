#: import sm kivy.uix.screenmanager

<TopicTitle@Label>: # Topics Title
    canvas.before:
        Color:
            rgba: (0.16, 0.2, 0.24, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: (1, None)
    text_size: (self.width-40, None)
    height: 50+self.texture_size[1]
    color: (1, 1, 1, 1)
    bold: True
    font_size: 38
    halign: 'center'

<TopicDescription@Label>: # Topics Description
    size_hint: (1, None)
    text_size: self.width-40, None
    height: 60+self.texture_size[1]
    color: (0, 0, 0, 1)
    italic: True
    font_size: 14

<TopicToggleButton>: # Topics Buttons
    size_hint: (1, None)
    height: 48
    background_normal: './Sources/button_normal.png'
    background_down: './Sources/button_down.png'
    bold: True
    font_size: 14

<IndexStackLayout>:
    size_hint: (1, None)
    padding: (7, 1, 1, 1)
    height: self.minimum_height

<IndexToggleButton>: # Index Buttons
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    color: (0, 0, 0, 1)
    font_size: 16
    size_hint: (None, None)
    text_size: (self.width-40, None)
    width: 380
    background_down: './Sources/grey_btn_down.png'

<MyIndexBox@BoxLayout>:
    orientation: "vertical"
    size_hint_y: None
    padding: (5, 5, 5, 5)
    canvas:
        Color:
            rgba: (0.18, 0.18, 0.18, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<LineBox@BoxLayout>:
    size_hint_y: None
    height: 1
    canvas:
        Color:
            rgba: (0.34, 0.76, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<MyIndex@Label>: # Topics Description
    size_hint: (1, None)
    text_size: self.width, None
    height: 5 + self.texture_size[1]
    color: (1, 1, 1, 1)
    font_size: 13

<MyTopic@Label>: # Topics Description
    size_hint: (1, None)
    text_size: self.width, None
    height: 10 + self.texture_size[1]
    color: (0.34, 0.76, 1, 1)
    font_size: 11
    halign: 'right'

<AnimWidget@Widget>:  # Animation
    canvas:
        Color:
            rgba: (0.34, 0.76, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: (None, None)
    size: (100, 2)

<MainWindow>:  # BoxLayout
    core_build_progress_bar: core_build_progress_bar.__self__
    coredb_state: coredb_state.__self__
    manager: manager.__self__
    index_selection: index_selection.__self__

    orientation: "horizontal"

    CIMScreenManager:
        transition: sm.SwapTransition()
        id: manager
        Home:
        IndexSelection:
            id: index_selection
        MapDesigner:

    BoxLayout:
        id: main_boxlayout
        orientation: "vertical"
        size_hint_x: None
        width: 100
        canvas.before:
            Color:
                rgba: (0.18, 0.18, 0.18, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Popup:
            id: coredb_update_popup
            size_hint: (None, None)
            height: 250
            width: 400
            title: "Update Indices Database"
            on_parent:
                if self.parent == main_boxlayout: self.parent.remove_widget(self)

            BoxLayout:
                orientation: "vertical"

                Label:
                    id: coredb_state
                    size_hint_y: None
                    height: 80
                    text: "..."
                    text_size: (self.width, self.height)
                    halign: 'center'
                    valign: 'bottom'

                AnchorLayout:
                    id: core_build_progress_bar

                BoxLayout:
                    orientation: "horizontal"

                    Button:
                        disabled: root.processing
                        text: "Update"
                        on_release: root.threadonator(root.core_build)

                    Button:
                        text: "Return"
                        on_release:
                            coredb_update_popup.dismiss()
                            root.popup_active = False

        Button:
            size_hint: (None, None)
            height: 50
            width: 90
            pos_hint: {'center_x': 0.5}
            bold: True
            font_size: 15
            text: "Update\nIndex DB"
            halign: 'center'
            on_release:
                root.popup_active = True
                root.threadonator(root.check)
                coredb_update_popup.__self__.open()

        Label:
            size_hint_y: None
            height: 70
            italic: True
            text: "CIM Version\n1.0.0"
            halign: 'center'

        Button:
            text: "Home"
            size_hint_y: None
            height: 50
            on_release: manager.current = 'Home'

        Button:
            text: "Index\nSelection"
            halign: 'center'
            size_hint_y: None
            height: 50
            on_release:
                index_selection.build_indices()
                manager.current = 'IndexSelectionScreen'

        Button:
            text: "Mapper"
            size_hint_y: None
            height: 50
            on_release: manager.current = 'MapDesignerScreen'

<Home>:  # Screen

    name: 'Home'
    BoxLayout:
        size_hint: (None, None)
        size: root.size
        canvas.before:
            Color:
                rgba: (0.90, 0.90, 0.90, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            italic: True
            text: "Help - How To - Tips"
            color: (0, 0, 0, 1)
            halign: 'center'

<IndexSelection>:  # Screen
    topics_slider: topics_slider.__self__
    indices_slider: indices_slider.__self__
    topics_slider_box: topics_slider_box.__self__
    indices_slider_stack: indices_slider_stack.__self__
    index_desc_slider: index_desc_slider.__self__

    toggle_index_desc_container: toggle_index_desc_container.__self__
    toggle_index_desc_icon: toggle_index_desc_icon.__self__
    toggle_index_desc_label: toggle_index_desc_label.__self__

    add_index_container: add_index_container.__self__
    add_index_icon: add_index_icon.__self__
    add_index_label: add_index_label.__self__

    my_indices_search_sm: my_indices_search_sm.__self__
    my_indices_container: my_indices_container.__self__

    name: 'IndexSelectionScreen'
    BoxLayout:
        size_hint: (None, None)
        size: root.size
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: 305

            ScrollView:
                id: topics_slider
                do_scroll_x: False
                bar_width: 5
                bar_inactive_color: (0, 0, 0, 1)
                bar_color: (0.34, 0.76, 1, 1)

                BoxLayout:
                    id: topics_slider_box
                    size_hint_y: None
                    orientation: "vertical"
                    size_hint_x: None
                    width: 300
                    padding: (1, 1, 1, 1)
                    spacing: 1
                    canvas:
                        Color:
                            rgba: (1, 1, 1, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

        BoxLayout:

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                # 850 = 8(paddings) + 305(topics_slider) + 157(min width of my_indices) + 380(min index slide)
                width: 0 if len(indices_slider_stack.children)==0 else 388+(abs(((root.width-850)//380)*380)+(((root.width-850)//380)*380))/2

                ScrollView:
                    id: indices_slider
                    do_scroll_x: False
                    bar_width: 5
                    bar_inactive_color: (0, 0, 0, 1)
                    bar_color: (0.34, 0.76, 1, 1)
                    bar_margin: 1
                    bar_pos_y: "left"
                    IndexStackLayout:
                        id: indices_slider_stack

                BoxLayout:
                    canvas.before:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint_y: None
                    height: 1

                BoxLayout:
                    id: index_desc_box
                    canvas.before:
                        Color:
                            rgba: (0.18, 0.18, 0.18, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    orientation: "horizontal"
                    size_hint_y: None
                    height: 80

                    BoxLayout:
                        size_hint: (None, 1)
                        width: 15

                    AnchorLayout:
                        id: toggle_index_desc_container
                        size_hint: (None, 1)
                        anchor_x: "center"
                        anchor_y: "top"
                        width: 45

                        Button:
                            id: toggle_index_desc_icon
                            size_hint: (None, None)
                            width: 45
                            height: 17
                            background_down: './Sources/index_desc_up_down.png' if index_desc_box.height == 80 else './Sources/index_desc_down_down.png'
                            background_normal: './Sources/index_desc_up_normal.png' if index_desc_box.height == 80 else './Sources/index_desc_down_normal.png'
                            on_release:
                                if index_desc_box.height == 80: index_desc_box.height = 200
                                else: index_desc_box.height = 80

                        Label:
                            id: toggle_index_desc_label
                            size_hint: (1, None)
                            height: 50
                            text: "OPEN" if index_desc_box.height == 80 else "CLOSE"
                            color: (1, 1, 1, 1)
                            font_size: 12

                    ScrollView:
                        id: index_desc_slider
                        bar_width: 5
                        bar_inactive_color: (1, 1, 1, 1)
                        bar_color: (0.34, 0.76, 1, 1)
                        bar_margin: 1
                        bar_pos_y: "right"

                        Label:
                            text: "Select an Index to read the description.." if root.selected_indices["feat_index"] is None else root.selected_indices["feat_index"].note
                            text_size: (self.width-30, None)
                            size_hint_y: None
                            height: 30 + self.texture_size[1]
                            color: (1, 1, 1, 1)
                            font_size: 15

                    AnchorLayout:
                        id: add_index_container
                        size_hint_x: None

                        BoxLayout:
                            size_hint: (None, None)
                            height: add_index_icon.height + add_index_label.height
                            width: add_index_icon.width
                            orientation: "vertical"

                            Button:
                                id: add_index_icon
                                size_hint: (None, None)
                                width: 50
                                height: 35
                                background_normal: './Sources/btn_add_index_normal.png'
                                background_down: './Sources/btn_add_index_down.png'
                                on_release: root.on_my_indices()

                            Label:
                                id: add_index_label
                                size_hint: (1, None)
                                height: 15
                                text: "ADD INDEX"
                                color: (1, 1, 1, 1)
                                font_size: 12

            BoxLayout:
                orientation: "horizontal"
                canvas:
                    Color:
                        rgba: (0.9, 0.9, 0.9, 1)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                BoxLayout:
                    canvas:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint: (None, 1)
                    width: 1

                ScreenManager:
                    id: my_indices_search_sm
                    transition: sm.NoTransition()

                    Screen:
                        name: "search_index"

                        BoxLayout:
                            orientation: "vertical"

                            Button:
                                size_hint_y: None
                                height: 50
                                text: "Search Index"
                                bold: True
                                color: (1, 1, 1, 1)
                                background_normal: './Sources/search_my_indices_opened.png'
                                background_down: './Sources/search_my_indices_pressed.png'

                            BoxLayout:
                                canvas:
                                    Color:
                                        rgba: (0.267, 0.259, 0.251, 1)
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size

                            Button:
                                size_hint_y: None
                                height: 50
                                text: "My Indices"
                                bold: True
                                color: (0.5, 0.5, 0.5, 1)
                                background_normal: './Sources/my_indices_closed.png'
                                background_down: './Sources/open_my_indices.png'
                                on_release: my_indices_search_sm.current = "my_indices"

                    Screen:
                        name: "my_indices"

                        BoxLayout:
                            orientation: "vertical"

                            Button:
                                size_hint_y: None
                                height: 50
                                text: "Search Index"
                                bold: True
                                color: (0.5, 0.5, 0.5, 1)
                                background_normal: './Sources/search_closed.png'
                                background_down: './Sources/open_search.png'
                                on_release: my_indices_search_sm.current = "search_index"

                            Button:
                                size_hint_y: None
                                height: 50
                                text: "My Indices"
                                bold: True
                                color: (1, 1, 1, 1)
                                background_normal: './Sources/search_my_indices_opened.png'
                                background_down: './Sources/search_my_indices_pressed.png'

                            BoxLayout:
                                id: my_indices_container
                                orientation: "vertical"
                                padding: (5, 5, 5, 5)

                BoxLayout:
                    canvas:
                        Color:
                            rgba: (0, 0, 0, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint: (None, 1)
                    width: 1



<MapDesigner>:  # Screen
    name: 'MapDesignerScreen'
    BoxLayout:
        size_hint: (None, None)
        size: root.size
        canvas.before:
            Color:
                rgba: (0.60, 0.72, 0.80, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            italic: True
            text: "MapDesignerScreen"
            color: (0, 0, 0, 1)
            halign: 'center'