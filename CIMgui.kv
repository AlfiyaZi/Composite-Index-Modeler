<MainWindow>:
    core_build_progress_bar: core_build_progress_bar
    orientation: "horizontal"
    BoxLayout:
        id: main_boxlayout
        size_hint_x: None
        width: 100
        orientation: "vertical"
        Popup:
            id: coredb_update_popup
            size_hint: None, None
            height: 250
            width: 400
            title: "Update Indices Database"
            on_parent:
                if self.parent == main_boxlayout: self.parent.remove_widget(self)
            BoxLayout:
                orientation: "vertical"
                Label:
                    size_hint_y: None
                    height: 80
                    text: root.check()
                    halign: 'center'
                ProgressBar:
                    id: core_build_progress_bar
                    size_hint_y: None
                    height: 50
                    value: 0
                    max: 100
                BoxLayout:
                    orientation: "horizontal"
                    Button:
                        text: "Update"
                        on_release: root.threadonator(root.core_build)
                    Button:
                        text: "Return"
                        on_release: coredb_update_popup.dismiss()
        Button:
            size_hint_y: None
            height: 60
            bold: True
            font_size: 15
            text: "Update\nIndex DB"
            halign: 'center'
            on_release: coredb_update_popup.__self__.open()
        Label:
            size_hint_y: None
            height: 60
            italic: True
            text: "CIM Version\n1.0.0"
            halign: 'center'
    RelativeLayout:
        id: main_frame
        Splitter:
            sizable_from: "right"
            min_size: 10
            max_size: main_frame.width
            Button:
                text: "Panel"