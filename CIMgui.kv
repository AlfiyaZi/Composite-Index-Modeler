<MainWindow>:
    core_build_progress_bar: core_build_progress_bar
    coredb_state: coredb_state
    index_selection: index_selection
    coredb_update_popup: coredb_update_popup.__self__

    orientation: "horizontal"

    CIMScreenManager: # todo while updating prevent changing screens also prevent updating after all screens changed. also prevent algevra if not series
        transition: sm.SwapTransition()
        id: manager
        Home:
        IndexSelection:
            id: index_selection
            is_update_db: update_db
            is_manager: manager
            is_index_creation: index_creation
        IndexCreation:
            id: index_creation
            ic_index_selection: index_selection
        MapDesigner:

    BoxLayout:
        id: main_boxlayout
        orientation: "vertical"
        size_hint_x: None
        width: 100
        canvas.before:
            Color:
                rgba: (0.18, 0.18, 0.18, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Popup:
            id: coredb_update_popup
            size_hint: (None, None)
            height: 250
            width: 400
            title: "Update Indicator Database"
            on_parent:
                if self.parent == main_boxlayout: self.parent.remove_widget(self)

            BoxLayout:
                orientation: "vertical"

                Label:
                    id: coredb_state
                    size_hint_y: None
                    height: 80
                    text: "..."
                    text_size: (self.width, self.height)
                    halign: 'center'
                    valign: 'bottom'

                AnchorLayout:
                    id: core_build_progress_bar

                BoxLayout:
                    orientation: "horizontal"

                    Button:
                        disabled: root.processing
                        text: "Update"
                        on_release: root.threadonator(root.core_build)

                    Button:
                        text: "Return"
                        on_release:
                            coredb_update_popup.dismiss()
                            root.popup_active = False

        Button:
            id: update_db
            size_hint: (None, None)
            height: 35
            width: 90
            pos_hint: {'center_x': 0.5}
            bold: True
            font_size: 14
            text: "Update DB"
            on_release:
                root.popup_active = True
                root.threadonator(root.check)
                coredb_update_popup.__self__.open()

        Label:
            size_hint_y: None
            height: 70
            italic: True
            text: "CIM Version\n1.0.0"
            text_size: (self.width, self.height)
            halign: 'center'
            valign: 'middle'

        Button:
            text: "Home"
            size_hint_y: None
            height: 50
            on_release: manager.current = 'Home'

        Button:
            text: "Indicator\nSelection"
            text_size: (self.width, self.height)
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: 50
            on_release: index_selection.build_indices()

        Button:
            text: "Index\nCreation"
            text_size: (self.width, self.height)
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: 50
            on_release: manager.current = 'IndexCreationScreen'

        Button:
            text: "Mapper"
            size_hint_y: None
            height: 50
            on_release: manager.current = 'MapDesignerScreen'


<Home>:
    name: 'Home'
    BoxLayout:
        size_hint: (None, None)
        size: root.size
        canvas.before:
            Color:
                rgba: (0.90, 0.90, 0.90, 1)
