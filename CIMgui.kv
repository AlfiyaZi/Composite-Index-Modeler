# Screen
<IndexCreation>:
    btn_get_indicators: btn_get_indicators.__self__

    name: 'IndexCreationScreen'
    BoxLayout:

        BoxLayout:
            orientation: "vertical"

            BoxLayout:
                size_hint_y: None
                height: 100
                padding: (5, 5, 0, 5)
                canvas.before:
                    Color:
                        rgba: (0.22, 0.22, 0.22, 1)
                    Rectangle:
                        pos: self.pos
                        size: self.size

                BoxLayout:
                    size_hint_x: None
                    width: 130
                    orientation: "vertical"

                    ToggleButton:
                        id: btn_get_indicators
                        size_hint: (None, None)
                        width: 130
                        height: 68
                        background_normal: './Sources/get_indicators_btn_normal.png'
                        background_down: './Sources/get_indicators_btn_down.png'
                        background_disabled_down: './Sources/get_indicators_btn_down.png'
                        on_state: if self.state == "down": root.threadonator(root.get_indicators)

                    Label:
                        canvas.before:
                            Color:
                                rgba: (1, 1, 1, 1) if btn_get_indicators.state == "normal" else (0.96, 0.26, 0.21, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size

                        size_hint: (None, None)
                        height: 22
                        width: 130
                        font_size: 13
                        color: (0.96, 0.26, 0.21, 1) if btn_get_indicators.state == "normal" else (1, 1, 1, 1)
                        text: "Get Indicator Data"

                BoxLayout:
                    size_hint_x: None
                    # 542 = sibling widths
                    width: root.width - 542

                # Use that to add canvas color in the background. This will hide other buttons when overlapping them.
                BoxLayout:
                    spacing: 5
                    padding: (1, 0, 5, 0)
                    canvas.before:
                        Color:
                            rgba: (0.22, 0.22, 0.22, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    BoxLayout:
                        size_hint_x: None
                        width: 130
                        orientation: "vertical"

                        ToggleButton:
                            id: btn_view_indicators
                            size_hint: (None, None)
                            width: 130
                            height: 68
                            background_normal: './Sources/view_indicators_btn_normal.png'
                            background_down: './Sources/view_indicators_btn_down.png'
                            on_press: pass

                        Label:
                            canvas.before:
                                Color:
                                    rgba: (1, 1, 1, 1) if btn_view_indicators.state == "normal" else (0.96, 0.26, 0.21, 1)
                                Rectangle:
                                    pos: self.pos
                                    size: self.size

                            size_hint: (None, None)
                            height: 22
                            width: 130
                            font_size: 13
                            color: (0.96, 0.26, 0.21, 1) if btn_view_indicators.state == "normal" else (1, 1, 1, 1)
                            text: "View Indicator Data"

                    BoxLayout:
                        size_hint_x: None
                        width: 130
                        orientation: "vertical"

                        ToggleButton:
                            id: btn_series_selection
                            size_hint: (None, None)
                            width: 130
                            height: 68
                            background_normal: './Sources/series_selection_btn_normal.png'
                            background_down: './Sources/series_selection_btn_down.png'
                            on_press: pass

                        Label:
                            canvas.before:
                                Color:
                                    rgba: (1, 1, 1, 1) if btn_series_selection.state == "normal" else (0.96, 0.26, 0.21, 1)
                                Rectangle:
                                    pos: self.pos
                                    size: self.size

                            size_hint: (None, None)
                            height: 22
                            width: 130
                            font_size: 13
                            color: (0.96, 0.26, 0.21, 1) if btn_series_selection.state == "normal" else (1, 1, 1, 1)
                            text: "Series Selection"

                    BoxLayout:
                        size_hint_x: None
                        width: 130
                        orientation: "vertical"

                        ToggleButton:
                            id: btn_index_algebra
