<AnimWidget@Widget>:
    canvas:
        Color:
            rgba: 0.34, 0.76, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: None, None
    size: 100, 2

<MainWindow>:
    core_build_progress_bar: core_build_progress_bar.__self__
    coredb_state: coredb_state.__self__
    manager: manager.__self__
    orientation: "horizontal"
    ScreenManager:
        id: manager
        Screen:
            name: 'index_selection'
            canvas:
                Color:
                    rgba: 0.60, 0.72, 0.80, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                size_hint_y: None
                height: 70
                text: "NO"
        Screen:
            name: 'mapper'
            canvas:
                Color:
                    rgba: 0.92, 0.93, 0.95, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                size_hint_y: None
                height: 70
                text: "YES"
    BoxLayout:
        id: main_boxlayout
        orientation: "vertical"
        size_hint_x: None
        width: 100
        canvas.before:
            Color:
                rgba: 0.16, 0.18, 0.19, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Popup:
            id: coredb_update_popup
            size_hint: None, None
            height: 250
            width: 400
            title: "Update Indices Database"
            on_parent:
                if self.parent == main_boxlayout: self.parent.remove_widget(self)
            BoxLayout:
                orientation: "vertical"
                Label:
                    id: coredb_state
                    size_hint_y: None
                    height: 80
                    text: "..."
                    text_size: self.width, self.height
                    halign: 'center'
                    valign: 'bottom'
                AnchorLayout:
                    id: core_build_progress_bar
                BoxLayout:
                    orientation: "horizontal"
                    Button:
                        disabled: root.processing
                        text: "Update"
                        on_release: root.threadonator(root.core_build)
                    Button:
                        text: "Return"
                        on_release:
                            coredb_update_popup.dismiss()
                            root.popup_active = False
        Button:
            size_hint: None, None
            height: 50
            width: 90
            pos_hint: {'center_x': 0.5}
            bold: True
            font_size: 15
            text: "Update\nIndex DB"
            halign: 'center'
            on_release:
                root.popup_active = True
                root.threadonator(root.check)
                coredb_update_popup.__self__.open()
        Label:
            size_hint_y: None
            height: 70
            italic: True
            text: "CIM Version\n1.0.0"
            halign: 'center'
        Button:
            text: "1"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "index_selection"
        Button:
            text: "2"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "mapper"