#: import sm kivy.uix.screenmanager

<AnimWidget@Widget>:  # Animation
    canvas:
        Color:
            rgba: 0.34, 0.76, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: None, None
    size: 100, 2

<MainWindow>:  # BoxLayout
    core_build_progress_bar: core_build_progress_bar.__self__
    coredb_state: coredb_state.__self__
    manager: manager.__self__
    index_selection: index_selection.__self__

    orientation: "horizontal"

    CIMScreenManager:
        transition: sm.SwapTransition()
        id: manager
        Home:
        IndexSelection:
            id: index_selection
        MapDesigner:

    BoxLayout:
        id: main_boxlayout
        orientation: "vertical"
        size_hint_x: None
        width: 100
        canvas.before:
            Color:
                rgba: 0.18, 0.18, 0.18, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Popup:
            id: coredb_update_popup
            size_hint: None, None
            height: 250
            width: 400
            title: "Update Indices Database"
            on_parent:
                if self.parent == main_boxlayout: self.parent.remove_widget(self)

            BoxLayout:
                orientation: "vertical"

                Label:
                    id: coredb_state
                    size_hint_y: None
                    height: 80
                    text: "..."
                    text_size: self.width, self.height
                    halign: 'center'
                    valign: 'bottom'

                AnchorLayout:
                    id: core_build_progress_bar

                BoxLayout:
                    orientation: "horizontal"

                    Button:
                        disabled: root.processing
                        text: "Update"
                        on_release: root.threadonator(root.core_build)

                    Button:
                        text: "Return"
                        on_release:
                            coredb_update_popup.dismiss()
                            root.popup_active = False

        Button:
            size_hint: None, None
            height: 50
            width: 90
            pos_hint: {'center_x': 0.5}
            bold: True
            font_size: 15
            text: "Update\nIndex DB"
            halign: 'center'
            on_release:
                root.popup_active = True
                root.threadonator(root.check)
                coredb_update_popup.__self__.open()

        Label:
            size_hint_y: None
            height: 70
            italic: True
            text: "CIM Version\n1.0.0"
            halign: 'center'

        Button:
            text: "Home"
            size_hint_y: None
            height: 50
            on_release: manager.current = 'Home'
        Button:
            text: "Index\nSelection"
            halign: 'center'
            size_hint_y: None
            height: 50
            on_release:
                index_selection.build_indices()
                manager.current = 'IndexSelectionScreen'
        Button:
            text: "Mapper"
            size_hint_y: None
            height: 50
            on_release: manager.current = 'MapDesignerScreen'

<Home>:  # Screen
    name: 'Home'
    BoxLayout:
        size_hint: None, None
        size: root.size
        canvas.before:
            Color:
                rgba: 0.92, 0.93, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            italic: True
            text: "Help - How To - Tips"
            color: 0, 0, 0, 1
            halign: 'center'

<IndexSelection>:  # Screen
    topics_slider: topics_slider.__self__
    t_slide: t_slide.__self__

    name: 'IndexSelectionScreen'
    BoxLayout:
        size_hint: None, None
        size: root.size
        canvas.before:
            Color:
                rgba: 0.92, 0.93, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: 305
            ScrollView:
                id: t_slide
                do_scroll_x: False
                bar_width: 2
                bar_inactive_color: 0, 0, 0, 1
                bar_color: 0.34, 0.76, 1, 1
                BoxLayout:
                    id: topics_slider
                    size_hint_y: None
                    orientation: "vertical"
                    size_hint_x: None
                    width: 300
                    padding: 1, 1, 1, 1
                    spacing: 1
                    canvas:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
        Label:
            italic: True
            text: "IndexSelectionScreen"
            color: 0, 0, 0, 1
            halign: 'center'
        BoxLayout:
            size_hint_x: None
            width: 185
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

<MapDesigner>:  # Screen
    name: 'MapDesignerScreen'
    BoxLayout:
        size_hint: None, None
        size: root.size
        canvas.before:
            Color:
                rgba: 0.60, 0.72, 0.80, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            italic: True
            text: "MapDesignerScreen"
            color: 0, 0, 0, 1
            halign: 'center'