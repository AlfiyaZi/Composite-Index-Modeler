#:import core_tables Core.core_tables

<MainWindow>:
    orientation: "horizontal"
    BoxLayout:
        id: main_boxlayout
        size_hint_x: None
        width: 100
        orientation: "vertical"
        Popup:
            id: coredb_update_popup
            size_hint: None, None
            height: 300
            width: 400
            title: "Update Indices Database"
            on_parent:
                if self.parent == main_boxlayout: self.parent.remove_widget(self)
            BoxLayout:
                orientation: "vertical"
                Label:
                    size_hint_y: None
                    height: 80
                    text: core_tables.threadonator("values_build")
                    halign: 'center'

                Label:
                    size_hint_y: None
                    height: 20
                    text: str(core_tables.checkpoint)
                    halign: 'center'

                ProgressBar:
                    size_hint_y: None
                    height: 50
                    value: 100
                    max: 200
                BoxLayout:
                    orientation: "horizontal"
                    Button:
                        text: "Update"
                        on_release: core_tables.threadonator("core_build")
                    Button:
                        text: "Return"
                        on_release: coredb_update_popup.dismiss()
        Button:
            size_hint_y: None
            height: 60
            bold: True
            font_size: 15
            text: "Update\nIndex DB"
            halign: 'center'
            on_release: coredb_update_popup.__self__.open()
        Label:
            size_hint_y: None
            height: 60
            italic: True
            text: "CIM Version\n1.0.0"
            halign: 'center'
    RelativeLayout:
        id: main_frame
        Splitter:
            sizable_from: "right"
            min_size: 10
            max_size: main_frame.width
            Button:
                text: "Panel"